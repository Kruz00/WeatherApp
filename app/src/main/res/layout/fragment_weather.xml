<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.pam_228779.weatherapppro.viewModel.WeatherViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Current Weather Display -->
        <TextView
            android:id="@+id/current_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Weather"
            android:layout_centerHorizontal="true" />

        <!-- Hourly Forecast Display -->
        <RecyclerView
            android:id="@+id/hourly_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_weather"
            android:layout_marginTop="16dp" />

        <!-- Daily Forecast Display -->
        <RecyclerView
            android:id="@+id/daily_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hourly_forecast"
            android:layout_marginTop="16dp" />

    </RelativeLayout>
</layout>